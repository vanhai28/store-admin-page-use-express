<main>
    <div class="container-fluid">
        <h1 class="mt-4">Sản phẩm bán chạy</h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item"><a href="/admin/dashboard">Dashboard</a></li>
            <li class="breadcrumb-item active">Sách bán chạy</li>
        </ol>

        <div class="alert alert-danger d-none messageDelete"></div>
        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-table mr-1"></i>
                Sản phẩm bán chạy
            </div>
            <div class="card-body" id="cart__data">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Tiêu đề</th>
                                <th>Tác giả</th>
                                <th>Loại sách</th>
                                <th>Giá bán</th>
                                <th>SL Bán</th>
                                <th>Lượt xem</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Tiêu đề</th>
                                <th>Tác giả</th>
                                <th>Loại sách</th>
                                <th>Giá bán</th>
                                <th>SL Bán</th>
                                <th>Lượt xem</th>
                            </tr>
                        </tfoot>
                        <tbody id="tbody__data">
                            {{#eachIndex listBook.docs}}
                                <tr>
                                    <td><a class="book_title" href="/admin/book/edit?id={{item._id}}">{{item.title}}  <i class="fas fa-edit text-success" aria-hidden="true"></i></a></td>
                                   <td>
                                       {{join item.author }}          
                                    </td>
                                    <td>{{item.category}}</td>
                                    <td>{{formatNumber item.price}}<u>đ</u> </td>
                                    <td>{{item.orders}}</td>
                                    <td>{{item.views}}</td>

                                </tr>
                            {{/eachIndex}}
                            
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</main>
