<main>
    <div class="container-fluid">
        <h1 class="mt-4">Thêm sản phẩm</h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item"><a href="/admin/dashboard">Dashboard</a></li>
            <li class="breadcrumb-item active">Sách</li>
            <li class="breadcrumb-item active">Thêm sản phẩm</li>
        </ol>
        {{#if result}}
        <div class="alert alert-primary " id="addSucess" role="alert">{{result}}</div>
        {{/if}}
        <div class="alert alert-danger d-none" id="addFail" role="alert"></div>
        <div class="card mb-4">
            <div class="card-body">
              <div class="example-wrap">
                <div class="example">
                  <form enctype="multipart/form-data"  id="formInforBook" action="/admin/book/add-book" method="POST">
                    <div class="row">
                      <div class="form-group col-md-6">
                        <label for="title">Title</label>
                        <input required type="text" class="form-control" name="title" id="title" placeholder="Tiêu đề" autocomplete="off">
                      </div>
                      <div class="form-group col-md-6">
                        <label for="author">Tác giả</label>
                        <input required type="text" class="form-control" name="author" id="author" placeholder="Tác giả" autocomplete="off">
                        <span>Tên các tác giả phân cách bằng dầu phẩy</span>
                      </div>
                    </div>
                    <div class="row">
                      <div class="form-group col-md-6">
                        <label  for="category">Loại sách</label>
                        <input required type="text" class="form-control" id="category" name="category" placeholder="Loại sách" autocomplete="off">
                      </div>
                      <div class="form-group col-md-6">
                        <label for="price">Giá sản phẩm</label>
                        <input required type="number" class="form-control" id="price" name="price" placeholder="0.0" autocomplete="off">
                      </div>
                    </div>
                    <div class="form-group">
                      <label for="detail">Mô tả</label>
                      <textarea class="form-control" rows="5" name="detail" id="detail" placeholder="Mô tả cuốn sách..."></textarea>
                    </div>
                 
                    <div class="row form-group">
                        <label class="col-sm-2" for="fileImageCover">Tải ảnh </label>
                        <div class="custom-file col-sm-6">    
                            <input name="upload" multiple type="file" id="fileImageCover" class="custom-file-input">
                            <label for="fileImageCover" class="custom-file-label">Choose file</label>
                        </div>
                    </div>
                      <div class=" row form-group">
                        <label class="col-sm-2" for="fileImageCover">Tải ảnh cover </label>
                        <div class="custom-file  col-sm-6">
                          <input name="coverImage" type="file" id="coverImage" class="custom-file-input">
                          <label for="coverImage" class="custom-file-label">Choose file cover</label>
                        </div>
                    </div>
                     <div class="form-group">
                      <button type="submit" value="Upload" class="btn btn-primary">Thêm</button>
                    </div>
                  </form>
                 
                </div>
              </div>
            </div>
        </div>
    </div>
</main>
<script src="/js/customize.js"></script>