<main>
    <div class="container-fluid">
        <h1 class="mt-4">Thêm sản phẩm</h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item"><a href="index.html">Dashboard</a></li>
            <li class="breadcrumb-item active">Sách</li>
            <li class="breadcrumb-item active">Thêm sản phẩm</li>
        </ol>
        <div class="card mb-4">
            <div class="card-body">
              <div class="example-wrap">
                <div class="example">
                  <form action="/book/add-book" method="POST">
                    <div class="row">
                      <div class="form-group col-md-6">
                        <label for="title">Title</label>
                        <input type="text" class="form-control" name="title" placeholder="Tiêu đề" autocomplete="off">
                      </div>
                      <div class="form-group col-md-6">
                        <label for="auther">Tác giả</label>
                        <input type="text" class="form-control" name="lastname" placeholder="Tác giả" autocomplete="off">
                        <span>Tên các tác giả phân cách bằng dầu phẩy</span>
                      </div>
                    </div>
                    <div class="row">
                      <div class="form-group col-md-6">
                        <label for="category">Loại sách</label>
                        <input type="text" class="form-control" id="category" name="category" placeholder="Loại sách" autocomplete="off">
                      </div>
                      <div class="form-group col-md-6">
                        <label for="price">Giá sản phẩm</label>
                        <input type="number" class="form-control" id="price" name="price" placeholder="0.0" autocomplete="off">
                      </div>
                    </div>
                    <div class="form-group">
                      <label for="detail">Mô tả</label>
                      <textarea class="form-control" id="detail" placeholder="Mô tả cuốn sách..."></textarea>
                    </div>
                    <div class="form-group">
                        <label for="linkOne">Link ảnh 1</label>
                        <input type="text" class="form-control" id = "linkOne" name="linkOne" placeholder="https://..." autocomplete="off">
                    </div>
                    <div class="form-group">
                        <label for="linkTwo">Link ảnh 2</label>
                        <input type="text" class="form-control" id = "linkTwo" name="linkTwo" placeholder="https://..." autocomplete="off">
                    </div>
                    <div class="form-group">
                      <button type="button" class="btn btn-primary">Submit</button>
                    </div>
                  </form>
                </div>
              </div>
            </div>
        </div>
    </div>
</main>