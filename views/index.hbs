<main>
    <div class="container-fluid">
        <h1 class="mt-4">Dashboard</h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item active">Dashboard</li>
        </ol>
        <div class="row">
            <div class="col-xl-6">
                <div class="card mb-4">
                    <div class="card-header">
                        <i class="fas fa-chart-area mr-1"></i>Các loại sản phẩm
                      
                    </div>
                    <div class="card-body">
                         <canvas id="category_chart" ></canvas>
                         <a href="/admin/book/list" class="btn btn-success float-right">Xem sản phẩm</a>
                    </div>   
                </div>
            </div>
            <div class="col-xl-6">
                <div class="card mb-4">
                    <div class="card-header">
                        <i class="fas fa-chart-bar mr-1"></i>
                        Đơn hàng
                    </div>
                    <div class="card-body">
                        <canvas id="numberOrdersChart" width="100%" height="40"></canvas>
                        <div>
                             <a href="/admin/orders/new" class="mt-5 btn btn-success float-right">Xem đơn hàng</a>
                        </div>
 
                    </div>
                    
                </div>
              
            </div>
        </div>
        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-table mr-1"></i>
               Người dùng
            </div>
            <div class="card-body">
                <div class="table-responsive">
                     <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Tên đăng nhập</th>
                                    <th>Email</th>
                                    <th>Ngày truy cập gần nhất</th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <th>Tên đăng nhập</th>
                                    <th>Email</th>
                                    <th>Ngày truy cập gần nhất</th>
                                </tr>
                            </tfoot>
                            <tbody>
                                {{#each data.docs}}
                                <tr>
                                    <td>{{user_name}}</td>
                                    <td>{{user_email}}</td> 
                                    <td>{{lastest_access_date}}</td> <!-- variable -->    
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                        <div class="text-right">
                             <a href="/admin/users/list" class="btn btn-success">Xem thêm</a>
                        </div>
                       
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<script src="https://cdn.jsdelivr.net/npm/chart.js@2.9.4/dist/Chart.min.js"></script>

